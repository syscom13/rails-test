<%= simple_form_for @product do |f| %>
  <%= f.input :name, placeholder: "Station", label: "Product ?" %>
  <%= f.input :url, placeholder: "http://getstation.com", label: "Url ?" %>
  <%= f.input :tagline, placeholder: "One app to rule them all", label: "Tagline ?" %>
  <%= f.input :category, collection: ["tech", "design", "education"], prompt: "Choose a category" %>
  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
<% end %>
